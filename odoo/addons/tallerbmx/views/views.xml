<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="tallerbmx.marca">
      <field name="name">Marcas de Bmx</field>
      <field name="model">tallerbmx.marca</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="precio"/>
          <field name="estado"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="tallerbmx.action_window">
      <field name="name">Marcas de Bmx</field>
      <field name="res_model">tallerbmx.marca</field>
      <field name="view_mode">tree,form</field>
    </record>


