<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="tallerbmx.bicicleta">
      <field name="name">Lista bicicletas</field>
      <field name="model">tallerbmx.bicicleta</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="cliente_id"/>
          <field name="empleado_ids"/>
          <field name="categoria"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="tallerbmx.empleado">
      <field name="name">Lista empleados</field>
      <field name="model">tallerbmx.empleado</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="bicicleta_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="tallerbmx.pieza">
      <field name="name">Lista piezas</field>
      <field name="model">tallerbmx.pieza</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="tipo"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="tallerbmx.cliente">
      <field name="name">Lista clientes</field>
      <field name="model">tallerbmx.cliente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="apellido"/>
          <field name="bicicletas_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="tallerbmx.cliente">
      <field name="name">Formulario clientes</field>
      <field name="model">tallerbmx.cliente</field>
      <field name="arch" type="xml">
        <form>
          <group name="name" string="String">
            <field name="name"/>
            <field name="apellido"/>
            <field name="bicicletas_ids">
              <tree>
                <field name="name" />
                <field name="categoria" />
              </tree>
            </field>
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="tallerbmx.action_window_1">
      <field name="name">Taller Bicicletas</field>
      <field name="res_model">tallerbmx.bicicleta</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="tallerbmx.action_window_2">
      <field name="name">Taller Bicicletas</field>
      <field name="res_model">tallerbmx.empleado</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="tallerbmx.action_window_3">
      <field name="name">Taller Bicicletas</field>
      <field name="res_model">tallerbmx.pieza</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="tallerbmx.action_window_4">
      <field name="name">Taller Bicicletas</field>
      <field name="res_model">tallerbmx.cliente</field>
      <field name="view_mode">tree,form</field>
    </record>

    
