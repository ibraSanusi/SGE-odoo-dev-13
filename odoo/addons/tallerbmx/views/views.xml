    <!-- Top menu item -->

    <menuitem name="Taller BMX" id="tallerbmx.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Bicicletas" id="tallerbmx.menu_1" parent="tallerbmx.menu_root"/>
    <menuitem name="Empleados" id="tallerbmx.menu_2" parent="tallerbmx.menu_root"/>
    <menuitem name="Pieza" id="tallerbmx.menu_3" parent="tallerbmx.menu_root"/>
    <menuitem name="Cliente" id="tallerbmx.menu_4" parent="tallerbmx.menu_root"/>

    <!-- actions -->

    <menuitem name="Registros" id="tallerbmx.menu_1_list" parent="tallerbmx.menu_1" action="tallerbmx.action_window_1"/>
    <menuitem name="Registros" id="tallerbmx.menu_2_list" parent="tallerbmx.menu_2" action="tallerbmx.action_window_2"/>
    <menuitem name="Registros" id="tallerbmx.menu_4_list" parent="tallerbmx.menu_3" action="tallerbmx.action_window_3"/>
    <menuitem name="Registros" id="tallerbmx.menu_5_list" parent="tallerbmx.menu_4" action="tallerbmx.action_window_4"/>

  </data>
</odoo>